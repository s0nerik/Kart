<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View" />
        <variable name="item" type="com.github.s0nerik.shoppingassistant.model.RealmPurchase" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_list_three_line_normal_height"
        android:foreground="?selectableItemBackground"
        android:onClick="@{() -> false}"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:tint="@color/textColorPrimaryLight"
            app:glideSrc='@{item.iconUrl}'
            app:glideConfig='@{"purchase_icon"}'
            tools:src="@drawable/product_cat_food"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon"
            android:layout_alignRight="@+id/icon"
            android:layout_marginRight="-8dp"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/bg_item_purchase_amount"
            android:visibility='@{item.readableAmount.empty ? View.GONE : View.VISIBLE}'
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text='@{item.readableAmount}'
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif"
                tools:text='2'
                />
        </FrameLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="16sp"
            android:text='@{item.readableName}'
            android:textColor="@color/textColorPrimary"
            tools:text="Pancake"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginRight="4sp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="14sp"
            android:text='@{item.readablePrice}'
            android:textColor="@color/textColorPrimaryLight"
            tools:text="$ 3.20"
            />
        <TextView
            android:id="@+id/priceDefaultCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/price"
            android:textSize="14sp"
            android:text='@{item.readablePriceDefaultCurrency}'
            android:textColor="@color/textColorSecondary"
            android:visibility='@{item.inDefaultCurrency ? View.GONE : View.VISIBLE}'
            tools:text="(UAH 520)"
            />
        <TextView
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="14sp"
            android:text='@{item.readableShop}'
            android:textColor="@color/textColorSecondary"
            tools:text="Silpo"
            />
    </RelativeLayout>
</layout>
