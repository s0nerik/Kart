<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.product.CreateProductActivity"
    >
    <data>
        <import type="android.view.View"/>
        <import type="com.github.s0nerik.shoppingassistant.screens.product.CreateProductViewModel.Action" />
        <variable
            name="vm"
            type="com.github.s0nerik.shoppingassistant.screens.product.CreateProductViewModel"
            />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/groupEditPrice"
            >
            <include
                layout="@layout/view_create_product"
                app:vm='@{vm}'
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/groupEditPrice"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:visibility='@{vm.action == Action.CREATE_PRICE ? View.VISIBLE : View.GONE}'
            android:orientation="horizontal"
            android:background="@color/material_color_white"
            android:elevation="2dp"
            android:clipChildren="false"
            >

            <FrameLayout
                android:id="@+id/btnCurrency"
                android:layout_width="56dp"
                android:layout_height="64dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick='@{() -> vm.selectCurrency()}'
                >

                <include
                    layout="@layout/view_currency_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:sign='@{vm.pendingCurrency != null ? vm.pendingCurrency.sign : "$"}'
                    />
            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilPriceValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etNewPriceValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/MaterialTypography.Dense.Body2"
                    tools:text="Food"
                    />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/btnPriceOk"
                android:layout_width="56dp"
                android:layout_height="64dp"
                android:layout_weight="0"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick='@{() -> vm.confirmPriceCreation()}'
                android:scaleType="center"
                android:src="@drawable/ic_done_black_24dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            />
    </RelativeLayout>
</layout>