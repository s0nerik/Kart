<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="vm"
            type="com.github.s0nerik.shoppingassistant.screens.settings.SelectExpensesLimitViewModel"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:text="Select limit"
            android:background="@color/material_color_grey_200"
            style="@style/TextAppearance.AppCompat.Body2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            >
            <include
                android:id="@+id/viewCurrency"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                app:sign='@{vm.currencySign}'
                app:background='@{@color/colorPrimary}'
                layout="@layout/view_currency_sign"
                />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etLimit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:inputType="numberDecimal"
                android:hint="Limit"
                android:layout_weight="1"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-12dp"
                android:layout_toLeftOf="@+id/btnConfirm"
                android:dropDownVerticalOffset="48dp"
                />
            <ImageView
                android:id="@+id/btnConfirm"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:src="@drawable/ic_done_black_24dp"
                android:onClick='@{() -> vm.accept()}'
                android:tint="@color/colorPrimaryDark"
                />
        </LinearLayout>
    </LinearLayout>
</layout>