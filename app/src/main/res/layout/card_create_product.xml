<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel"
            />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/cardNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor='@{viewModel.isExpanded ? @color/material_color_white : @color/colorAccent}'
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >
            <Button
                android:id="@+id/btnNewProduct"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add new product"
                android:textColor='@{viewModel.isExpanded ? @color/material_color_black : @color/material_color_white}'
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-8dp"
                android:clickable='@{viewModel.isExpanded ? false : true}'
                android:onClick='@{viewModel::expand}'
                style="@style/Widget.AppCompat.Button.Borderless"
                />

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility='@{viewModel.isExpanded ? View.VISIBLE : View.GONE}'
                >

                <ImageView
                    android:id="@+id/ivNewProductCategory"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:layout_alignTop="@+id/tilNewProductName"
                    android:layout_alignBottom="@+id/spinnerSelectShop"
                    android:tint="@color/material_color_black"
                    android:src="@drawable/cat_food"
                    tools:src="@drawable/cat_food"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilNewProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnNewProduct"
                    android:layout_toRightOf="@+id/ivNewProductCategory"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNewProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                        android:textColor="@color/material_color_white"
                        android:hint="Name"
                        tools:text="Hello"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/spinnerSelectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivNewProductCategory"
                    android:layout_below="@+id/tilNewProductName"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    >
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/material_color_white"
                        />
                    <TextView
                        android:id="@+id/newProductCategoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Category"
                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                        android:textColor="@color/material_color_white"
                        android:paddingLeft="8dp"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/spinnerSelectShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivNewProductCategory"
                    android:layout_below="@+id/spinnerSelectCategory"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    >
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/material_color_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Shop"
                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                        android:textColor="@color/material_color_white"
                        android:paddingLeft="8dp"
                        />
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btnConfirmNewProduct"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerSelectShop"
                    android:layout_toRightOf="@+id/btnCancelNewProduct"
                    android:text="Create"
                    app:layout_widthPercent="50%"
                    />

                <Button
                    android:id="@+id/btnCancelNewProduct"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerSelectShop"
                    android:text="Cancel"
                    android:onClick='@{viewModel::shrink}'
                    app:layout_widthPercent="50%"
                    />
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>