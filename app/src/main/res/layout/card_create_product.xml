<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View"/>
        <import type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel.Action"/>
        <variable
            name="viewModel"
            type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel"
            />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/cardNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor='@{viewModel.isExpanded ? @color/material_color_white : @color/colorAccent}'
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >
            <Button
                android:id="@+id/btnNewProduct"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add new product"
                android:textColor='@{viewModel.isExpanded ? @color/material_color_black : @color/material_color_white}'
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-8dp"
                android:clickable='@{viewModel.isExpanded ? false : true}'
                android:onClick='@{viewModel::expand}'
                style="@style/Widget.AppCompat.Button.Borderless"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:visibility='@{viewModel.isExpanded ? View.VISIBLE : View.GONE}'
                >

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    >

                    <LinearLayout
                        android:id="@+id/groupNewProductName"
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/groupProductData"
                        android:layout_alignBottom="@+id/groupProductData"
                        android:orientation="vertical"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilNewProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            >

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/etNewProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name"
                                android:textAppearance="@style/MaterialTypography.Dense.Body2"
                                tools:text="Hello"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:maxHeight="96dp"
                            android:maxWidth="96dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/cat_food"
                            android:tint="@color/textColorPrimary"
                            app:glideConfig='@{"add_product_icon"}'
                            app:glideImageSrc='@{viewModel.categoryIconUrl}'
                            tools:src="@drawable/cat_food"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/groupProductData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/groupNewProductName"
                        android:orientation="vertical"
                        >

                        <include
                            android:id="@+id/btnSelectPrice"
                            layout="@layout/view_btn_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:visibility='@{viewModel.action == Action.CREATE_PRODUCT ? View.VISIBLE : View.GONE}'
                            app:bgColor='@{viewModel.price != null ? @color/material_color_grey_800 : @color/colorAccent}'
                            app:glideConfig='@{"product_price_icon"}'
                            app:iconUrl='@{viewModel.priceIconUrl}'
                            app:onClick='@{viewModel::selectPrice}'
                            app:text='@{viewModel.price != null ? viewModel.price.currentValueString : "Price"}'
                            app:textColor='@{@color/material_color_white}'
                            tools:visibility="visible"
                            />

                        <include
                            android:id="@+id/btnSelectCategory"
                            layout="@layout/view_btn_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility='@{viewModel.action == Action.CREATE_PRODUCT ? View.VISIBLE : View.GONE}'
                            app:bgColor='@{viewModel.category != null ? @color/material_color_grey_800 : @color/colorAccent}'
                            app:glideConfig='@{"product_category_icon"}'
                            app:iconUrl='@{viewModel.categoryIconUrl}'
                            app:onClick='@{viewModel::selectCategory}'
                            app:text='@{viewModel.category != null ? viewModel.category.name : "Category"}'
                            app:textColor='@{@color/material_color_white}'
                            tools:visibility="visible"
                            />

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardCreateCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginRight="-2dp"
                            android:visibility='@{viewModel.action == Action.CREATE_CATEGORY ? View.VISIBLE : View.GONE}'
                            app:cardBackgroundColor="@color/material_color_grey_100"
                            app:cardUseCompatPadding="true"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilNewCategoryName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-4dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_toLeftOf="@+id/btnNewCategoryOk"
                                    app:counterEnabled="true"
                                    app:counterMaxLength="32"
                                    >

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/etNewCategoryName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Category name"
                                        android:maxLength="32"
                                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                                        tools:text="Food"
                                        />
                                </android.support.design.widget.TextInputLayout>

                                <ImageView
                                    android:id="@+id/btnNewCategoryOk"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="4dp"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:onClick='@{viewModel::confirmCategotyCreation}'
                                    android:scaleType="center"
                                    android:src="@drawable/ic_done_black_24dp"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <include
                            android:id="@+id/btnSelectShop"
                            layout="@layout/view_btn_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:bgColor='@{viewModel.shop != null ? @color/material_color_grey_800 : @color/colorAccent}'
                            app:glideConfig='@{"shop_category_icon"}'
                            app:onClick='@{viewModel::selectShop}'
                            app:text='@{viewModel.shop != null ? viewModel.shop.name : "Shop"}'
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnConfirmNewProduct"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groupProductData"
                        android:layout_toRightOf="@+id/btnCancelNewProduct"
                        android:onClick='@{viewModel::createProduct}'
                        android:text="Create"
                        app:layout_widthPercent="50%"
                        />

                    <Button
                        android:id="@+id/btnCancelNewProduct"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groupProductData"
                        android:onClick='@{viewModel::shrink}'
                        android:text="Cancel"
                        app:layout_widthPercent="50%"
                        />
                </android.support.percent.PercentRelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>