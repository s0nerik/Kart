<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="item" type="com.github.s0nerik.shoppingassistant.model.Item" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_list_three_line_normal_height"
        android:foreground="?selectableItemBackground"
        android:onClick="@{() -> false}"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="16dp"
            android:tint="@color/textColorPrimaryLight"
            app:glideImageSrc='@{item.iconUrl}'
            app:glideConfig='@{"purchase_icon"}'
            tools:src="@drawable/cat_food"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="16sp"
            android:text='@{item.readableName}'
            android:textColor="@color/textColorPrimary"
            tools:text="Pancake"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="14sp"
            android:text='@{item.readablePrice}'
            android:textColor="@color/textColorPrimaryLight"
            tools:text="$ 3.20"
            />
        <TextView
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="14sp"
            android:text='@{item.readableShop}'
            android:textColor="@color/textColorSecondary"
            tools:text="Silpo"
            />
    </RelativeLayout>
</layout>
