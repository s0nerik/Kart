<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <import type="com.github.s0nerik.shoppingassistant.screens.product.CreateProductViewModel.Action"/>
        <variable
            name="vm"
            type="com.github.s0nerik.shoppingassistant.screens.product.CreateProductViewModel"
            />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility='@{vm.action == Action.CREATE_SHOP ? View.VISIBLE : View.GONE}'
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cardCreateShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            app:cardBackgroundColor="@color/material_color_grey_100"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilNewShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/btnNewShopOk"
                    app:counterEnabled="true"
                    app:counterMaxLength="32"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNewShopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop name"
                        android:maxLength="32"
                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                        tools:text="ATB"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/btnNewShopOk"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick='@{() -> vm.confirmShopCreation()}'
                    android:scaleType="center"
                    android:src="@drawable/ic_done_black_24dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <include
            layout="@layout/view_btn_close_popup"
            app:onClick='@{() -> vm.discardShopCreation()}'
            />
    </FrameLayout>
</layout>