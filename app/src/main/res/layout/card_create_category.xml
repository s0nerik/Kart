<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <import type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel.Action"/>
        <variable
            name="viewModel"
            type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardCreateCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:visibility='@{viewModel.action == Action.CREATE_CATEGORY ? View.VISIBLE : View.GONE}'
        app:cardBackgroundColor="@color/material_color_grey_100"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilNewCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/btnNewCategoryOk"
                app:counterEnabled="true"
                app:counterMaxLength="32"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etNewCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category name"
                    android:maxLength="32"
                    android:textAppearance="@style/MaterialTypography.Dense.Body2"
                    tools:text="Food"
                    />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/btnNewCategoryOk"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick='@{viewModel::confirmCategoryCreation}'
                android:scaleType="center"
                android:src="@drawable/ic_done_black_24dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>