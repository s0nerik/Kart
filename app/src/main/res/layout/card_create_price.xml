<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <import type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel.Action"/>
        <variable
            name="vm"
            type="com.github.s0nerik.shoppingassistant.screens.purchase.CreateProductViewModel"
            />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility='@{vm.action == Action.CREATE_PRICE ? View.VISIBLE : View.GONE}'
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cardCreateCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            app:cardBackgroundColor="@color/material_color_grey_100"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                >

                <FrameLayout
                    android:id="@+id/btnCurrency"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/spinnerQuantityQualifier"
                    android:layout_marginLeft="4dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:onClick='@{() -> vm.selectCurrency()}'
                    >
                    <include
                        layout="@layout/view_currency_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:sign='@{vm.pendingCurrency != null ? vm.pendingCurrency.sign : "$"}'
                        />
                </FrameLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilPriceValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:layout_toLeftOf="@+id/btnPriceOk"
                    android:layout_toRightOf="@+id/btnCurrency"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNewPriceValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        android:inputType="numberDecimal"
                        android:textAppearance="@style/MaterialTypography.Dense.Body2"
                        tools:text="Food"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/btnPriceOk"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/spinnerQuantityQualifier"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick='@{() -> vm.confirmPriceCreation()}'
                    android:scaleType="center"
                    android:src="@drawable/ic_done_black_24dp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnerQuantityQualifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tilPriceValue"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="8dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <include
            layout="@layout/view_btn_close_popup"
            app:onClick='@{() -> vm.discardPriceCreation()}'
            />
    </FrameLayout>
</layout>