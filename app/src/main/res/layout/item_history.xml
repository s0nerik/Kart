<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="item" type="com.github.s0nerik.shoppingassistant.model.Purchase" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_list_three_line_normal_height"
        android:orientation="vertical"
        android:background="#fff"
        android:elevation="1dp"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            tools:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="18sp"
            android:text='@{item.readableCategory}'
            tools:text="Pancake"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="16sp"
            android:text='@{item.readablePrice}'
            tools:text="$ 3.20"
            />
        <TextView
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="14sp"
            android:text='@{item.readableShop}'
            tools:text="Silpo"
            />
    </RelativeLayout>
</layout>
