<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="item" type="com.github.s0nerik.shoppingassistant.model.Purchase" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_color_white"
        android:elevation="2dp"
        android:orientation="vertical"
        >
        <include
            layout="@layout/item_purchase"
            app:item="@{item}"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_horizontal_gradient_left"
            android:layout_gravity="top"
            />
    </FrameLayout>
</layout>